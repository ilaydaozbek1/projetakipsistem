@model WEBPEROJEM.Models.Personel.PersonelBilgileri

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.PersonelBilgileriId)

        <div class="card mb-6">
            <h5 class="card-header">Personel Ekle</h5>
            <div class="card-body pt-4">
                <form id="formAccountSettings" method="POST" onsubmit="return false">
                    <div class="row g-6">
                        <div class="col-md-6">
                            @Html.LabelFor(model => model.AdSoyad, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-fullname2" class="input-group-text"><i class="bx bx-user" style="font-size: 16px;"></i> </span>
                                <input class="form-control" type="text" id="AdSoyad" name="AdSoyad" autofocus="" value="@Model.AdSoyad">
                            </div>
                        </div>
                        <div class="col-md-6">
                            @Html.LabelFor(model => model.Eposta, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="input-group input-group-merge">
                                <span class="input-group-text"><i class="bx bx-envelope" style="font-size: 16px;"></i></span>
                                <input class="form-control" type="email" name="Eposta" id="Eposta" value="@Model.Eposta">
                            </div>
                        </div>
                        <div class="col-md-6">
                            @Html.LabelFor(model => model.Departman, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-company2" class="input-group-text"><i class="bx bx-buildings" style="font-size: 16px;"></i></span>
                                <select name="Departman" class="form-control" required>
                                    <option value="" disabled>Lütfen bir departman seçiniz</option>
                                    <option value="Mobilya" @(Model.Departman == "Mobilya" ? "selected" : "")>Mobilya</option>
                                    <option value="Muhasebe" @(Model.Departman == "Muhasebe" ? "selected" : "")>Muhasebe</option>
                                    <option value="Yönetim" @(Model.Departman == "Yönetim" ? "selected" : "")>Yönetim</option>
                                    <option value="Yazılım" @(Model.Departman == "Yazılım" ? "selected" : "")>Yazılım</option>
                                    <option value="Elektrik" @(Model.Departman == "Elektrik" ? "selected" : "")>Elektrik</option>
                                    <option value="Diğer" @(Model.Departman == "Diğer" ? "selected" : "")>Diğer</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            @Html.LabelFor(model => model.Gorev, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-job2" class="input-group-text"><i class="bx bx-briefcase" style="font-size: 16px;"></i></span>
                                <select name="Gorev" class="form-control" required>
                                    <option value="" disabled selected>Lütfen bir görev seçiniz</option>
                                    <option value="Mobilya Makinesi Operatörü" @(Model.Gorev == "Mobilya Makinesi Operatörü" ? "selected" : "")>Mobilya Makinesi Operatörü</option>
                                    <option value="Mobilya Montaj Elemanı" @(Model.Gorev == "Mobilya Montaj Elemanı" ? "selected" : "")>Mobilya Montaj Elemanı</option>
                                    <option value="Mobilya Ustası" @(Model.Gorev == "Mobilya Ustası" ? "selected" : "")>Mobilya Ustası</option>
                                    <option value="Mobilya Nakliye Sorumlusu" @(Model.Gorev == "Mobilya Nakliye Sorumlusu" ? "selected" : "")>Mobilya Nakliye Sorumlusu</option>
                                    <option value="Mobilya Stajyeri" @(Model.Gorev == "Mobilya Stajyeri" ? "selected" : "")>Mobilya Stajyeri</option>
                                    <option value="Muhasebe Personeli" @(Model.Gorev == "Muhasebe Personeli" ? "selected" : "")>Muhasebe Personeli</option>
                                    <option value="Yönetim Temsilcisi" @(Model.Gorev == "Yönetim Temsilcisi" ? "selected" : "")>Yönetim Temsilcisi</option>
                                    <option value="Yazılım Geliştirme" @(Model.Gorev == "Yazılım Geliştirme" ? "selected" : "")>Yazılım Geliştirme</option>
                                    <option value="Yazılım Destek" @(Model.Gorev == "Yazılım Destek" ? "selected" : "")>Yazılım Destek</option>
                                    <option value="Elektrik Teknisyeni" @(Model.Gorev == "Elektrik Teknisyeni" ? "selected" : "")>Elektrik Teknisyeni</option>
                                    <option value="Elektrik Teknisyen Stajyeri" @(Model.Gorev == "Elektrik Teknisyen Stajyeri" ? "selected" : "")>Elektrik Stajyeri</option>
                                    <option value="Elektrik Saha Şefi" @(Model.Gorev == "Elektrik Saha Şefi" ? "selected" : "")>Elektrik Saha Şefi</option>
                                    <option value="Diğer" @(Model.Gorev == "Diğer" ? "selected" : "")>Diğer</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            @Html.LabelFor(model => model.TCNO, htmlAttributes: new { @class = "control-label col-md-6" })
                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-id2" class="input-group-text"><i class="bx bx-id-card" style="font-size: 16px;"></i></span>
                                <input type="text" class="form-control" id="TCNO" name="TCNO" value="@Model.TCNO">
                            </div>
                        </div>
                        <div class="col-md-6">
                            @Html.LabelFor(model => model.Yetki, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-authority2" class="input-group-text"><i class="bx bx-shield" style="font-size: 16px;"></i></span>
                                <select name="Yetki" class="form-control" required>
                                    <option value="" disabled selected>Lütfen bir yetki seçiniz</option>
                                    <option value="Üst Yönetim" @(Model.Yetki == "Üst Yönetim" ? "selected" : "")>Üst Yönetim</option>
                                    <option value="Yönetim" @(Model.Yetki == "Yönetim" ? "selected" : "")>Yönetim</option>
                                    <option value="Normal" @(Model.Yetki == "Normal" ? "selected" : "")>Normal</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            @Html.LabelFor(model => model.TelNo, htmlAttributes: new { @class = "control-label col-md-6" })
                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-phone2" class="input-group-text"><i class="bx bx-phone" style="font-size: 16px;"></i></span>
                                <input type="text" class="form-control" id="TelNo" name="TelNo" value="@Model.TelNo">
                            </div>
                        </div>
                        <div class="col-md-6">
                            @Html.LabelFor(model => model.Adres, htmlAttributes: new { @class = "control-label col-md-6" })
                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-home2" class="input-group-text"><i class="bx bx-home" style="font-size: 16px;"></i></span>
                                <input type="text" class="form-control" id="Adres" name="Adres" value="@Model.Adres">
                            </div>
                        </div>
                        <div class="col-md-6">
                            @Html.LabelFor(model => model.DogumTarihi, htmlAttributes: new { @class = "control-label col-md-6" })
                            <input type="text" class="form-control" id="DogumTarihi" name="DogumTarihi" value="@Model.DogumTarihi">
                        </div>
                        <div class="col-md-6">
                            @Html.LabelFor(model => model.IseGirisTarihi, htmlAttributes: new { @class = "control-label col-md-6" })
                            <input type="text" class="form-control" id="IseGirisTarihi" name="IseGirisTarihi" value="@Model.IseGirisTarihi">
                        </div>
                        @*<div class="col-md-6">
                                @Html.LabelFor(model => model.MedeniHal, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="input-group input-group-merge">
                                    <span id="basic-icon-default-marital-status2" class="input-group-text"><i class="bx bx-heart" style="font-size: 16px;"></i></span>
                                    <input type="text" class="form-control" id="MedeniHal" name="MedeniHal" value="">
                                </div>
                            </div>*@
                        <div class="col-md-6">
                            @Html.LabelFor(model => model.MedeniHal, htmlAttributes: new { @class = "control-label col-md-2 mb-2" })
                            <div class="d-flex align-items-center gap-4 medeni-hal-container">
                                <div class="d-flex align-items-center gap-2">
                                    @Html.RadioButtonFor(model => model.MedeniHal, "Evli", new { id = "evli", required = true })
                                    <label for="evli" class="medeni-hal-label">Evli</label>
                                </div>

                                <div class="d-flex align-items-center gap-2">
                                    @Html.RadioButtonFor(model => model.MedeniHal, "Bekar", new { id = "bekar" })
                                    <label for="bekar" class="medeni-hal-label">Bekar</label>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            @Html.LabelFor(model => model.Sifre, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-marital-password2" class="input-group-text"><i class="bx bx-lock" style="font-size: 16px;"></i></span>
                                <input type="password" class="form-control" id="Sifre" name="Sifre" value="@Model.Sifre">
                            </div>
                        </div>
                        <div class="col-md-6">
                            @Html.LabelFor(model => model.PozisyonAciklama, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-message2" class="input-group-text"><i class="bx bx-comment" style="font-size: 16px;"></i></span>
                                <input type="text" class="form-control" id="PozisyonAciklama" name="PozisyonAciklama" value="@Model.PozisyonAciklama">
                            </div>
                        </div>
                        <div class="col-md-6">
                            @Html.LabelFor(model => model.YakinBilgisi, htmlAttributes: new { @class = "control-label col-md-6" })
                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-relation2" class="input-group-text"><i class="bx bx-link" style="font-size: 16px;"></i></span>
                                <select name="YakinBilgisi" class="form-control" required>
                                    <option value="" disabled selected>Lütfen bir yakınlık bilgisi seçiniz</option>
                                    <option value="Eş" @(Model.YakinBilgisi == "Eş" ? "selected" : "")>Eş</option>
                                    <option value="Anne" @(Model.YakinBilgisi == "Anne" ? "selected" : "")>Anne</option>
                                    <option value="Baba" @(Model.YakinBilgisi == "Baba" ? "selected" : "")>Baba</option>
                                    <option value="Kardeş" @(Model.YakinBilgisi == "Kardeş" ? "selected" : "")>Kardeş</option>
                                    <option value="Çocuk" @(Model.YakinBilgisi == "Çocuk" ? "selected" : "")>Çocuk</option>
                                    <option value="Diğer" @(Model.YakinBilgisi == "Diğer" ? "selected" : "")>Diğer</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            @Html.LabelFor(model => model.YakinAdSoyad, htmlAttributes: new { @class = "control-label col-md-6" })
                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-relative-name2" class="input-group-text"><i class="bx bx-group" style="font-size: 16px;"></i></span>
                                <input type="text" class="form-control" id="YakinAdSoyad" name="YakinAdSoyad" value="@Model.YakinAdSoyad">
                            </div>
                        </div>
                        <div class="col-md-6">
                            @Html.LabelFor(model => model.YakinTC, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-id2" class="input-group-text"><i class="bx bx-id-card" style="font-size: 16px;"></i></span>
                                <input type="text" class="form-control" id="YakinTC" name="YakinTC" value="@Model.YakinTC">
                            </div>
                        </div>
                        <div class="col-md-6">
                            @Html.LabelFor(model => model.YakinTel, htmlAttributes: new { @class = "control-label col-md-6" })
                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-relative-phone2" class="input-group-text"><i class="bx bx-phone" style="font-size: 16px;"></i></span>
                                <input type="text" class="form-control" id="YakinTel" name="YakinTel" value="@Model.YakinTel">
                            </div>
                        </div>
                    </div>

                    <div class="mt-2">
                        <button type="submit" class="btn btn-primary me-2">Personel Düzenle</button>
                        <a href="/PersonelBilgileris/Index" class="btn btn-outline-secondary">Anasayfaya Dön</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
}

